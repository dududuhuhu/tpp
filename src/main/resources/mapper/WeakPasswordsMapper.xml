<mapper namespace="com.tpp.threat_perception_platform.dao.WeakPasswordsMapper">

    <resultMap id="BaseResultMap" type="com.tpp.threat_perception_platform.pojo.WeakPasswords">
            <id property="id" column="id" />
            <result property="password" column="password" />
    </resultMap>

    <sql id="Base_Column_List">
        id,password
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from weak_passwords
        where  id = #{id} 
    </select>
